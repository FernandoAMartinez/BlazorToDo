@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudMainAppBar OnThemeToggled="ToggleTheme"/>

    <MudMainContent>
        <MudGrid Justify="Justify.Center" Class="mt-3">
            <MudItem xs="12" sm="12" md="8" lg="8" xl="8" xxl="8">
                @Body
            </MudItem>
        </MudGrid>
    </MudMainContent>
</MudLayout>

<MudThemeProvider DefaultScrollbar="false" Theme="currentTheme"/>

@code {
    private MudTheme currentTheme = new MudTheme();

    bool _drawerOpen = false;

    void ToggleTheme(MudTheme changedTheme) => currentTheme = changedTheme;
}