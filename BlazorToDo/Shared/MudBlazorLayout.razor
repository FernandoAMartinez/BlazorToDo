@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Dense="true" Color="Color.Primary" Fixed="false">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
            My ToDo's
        <MudSpacer></MudSpacer>
        <MudMenu>
            <ActivatorContent>
                <MudAvatar Color="Color.Tertiary">F</MudAvatar>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem>Profile</MudMenuItem>
                <MudMenuItem>Theme</MudMenuItem>
                <MudMenuItem>Usage</MudMenuItem>
                <MudMenuItem>Sign Out</MudMenuItem>
            </ChildContent>
        </MudMenu>

        @*<MudIconButton Icon="@Icons.Material.Filled.Add" Color="Color.Inherit" Edge="Edge.End"/>*@
    </MudAppBar>

    <MudDrawer @bind-Open="@_drawerOpen">
        <MudNav/>
    </MudDrawer>

    <MudMainContent>
    <MudContainer MaxWidth="MaxWidth.Large">
        @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle() =>  _drawerOpen = !_drawerOpen;
}